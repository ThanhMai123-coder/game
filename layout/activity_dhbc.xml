<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B0082"
    android:padding="16dp">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BÀI: "
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/questionTextView"
        android:scaleType="centerCrop"
        android:contentDescription="@string/question_image"
        android:background="@color/white" />

    <TextView
        android:id="@+id/hintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GỢI Ý"
        android:textSize="18sp"
        android:layout_below="@id/questionImageView"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XẾP: "
        android:textSize="18sp"
        android:layout_below="@id/hintTextView"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreTextView"
        android:hint="Nhập câu trả lời"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answerEditText"
        android:text="Gửi"
        android:layout_marginTop="16dp"
        android:background="#5247C5"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/submitButton"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <!-- Bảng chữ cái -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTextView"
        android:layout_marginTop="1dp"
        android:columnCount="7">

        <!-- Các nút chữ cái -->
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="A" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="B" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="C" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="D" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="E" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="F" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="G" />

        <!-- Các nút chữ cái khác -->
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="H" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="I" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="J" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="K" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="L" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="M" />

        <Button
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="6"
        android:layout_weight="1"
        android:text="N" />

        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="O" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="P" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Q" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="R" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="S" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="T" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="U" />

        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="V" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="X" />
        <Button android:layout_width="55dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Y" />

        <Button
            android:id="@+id/spaceButton"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=" " />

    </GridLayout>

</RelativeLayout>